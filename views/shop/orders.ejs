<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (orders.length <=0) { %>
                    <div class="empty-orders">
                        <h1>No orders yet!</h1>
                        <img src="/images/empty-orders.png" alt="Empty Orders">
                    </div>
                    <% } else { %>
                        <ul class="orders">
                            <% orders.forEach(order=> { %>
                                <li class="orders__item">
                                    <div class="order-header">
                                        <h1>Order #<%= order._id.toString().slice(-8) %>
                                        </h1>
                                        <p class="order-date">
                                            Ordered on <%= new Date(order.createdAt).toLocaleDateString() %>
                                                <br>
                                                at <%= new Date(order.createdAt).toLocaleTimeString([], {hour: '2-digit'
                                                    , minute:'2-digit'}) %>
                                        </p>
                                    </div>
                                    <ul class="orders__products">
                                        <% order.products.forEach(p=> { %>
                                            <li class="orders__products-item">
                                                <div class="product-info">
                                                    <img src="<%= p.product.imageUrl %>" alt="<%= p.product.title %>">
                                                    <div class="text-info">
                                                        <h2>
                                                            <%= p.product.title %>
                                                        </h2>
                                                        <p>Quantity: <%= p.quantity %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </li>
                                            <% }); %>
                                    </ul>
                                </li>
                                <% }); %>
                        </ul>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
    </body>

    </html>